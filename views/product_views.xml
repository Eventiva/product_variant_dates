<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Attribute Value Form View - Extend the inline form within attribute form -->
    <record id="product_attribute_value_form_view_inherit" model="ir.ui.view">
        <field name="name">product.attribute.value.form.inherit.sale.dates</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='value_ids']//list//field[@name='name']" position="after">
                <field name="sale_start_date" optional="hide"/>
                <field name="sale_end_date" optional="hide"/>
                <field name="is_sale_period_active" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Product Attribute Value Tree View -->
    <record id="product_attribute_value_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.attribute.value.tree.inherit.sale.dates</field>
        <field name="model">product.attribute.value</field>
        <field name="inherit_id" ref="product.product_attribute_value_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="sale_start_date" optional="hide"/>
                <field name="sale_end_date" optional="hide"/>
                <field name="is_sale_period_active" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Product Template Form View - Show inherited sale dates -->
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.sale.dates</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="sale_start_date" optional="hide" readonly="1"/>
                <field name="sale_end_date" optional="hide" readonly="1"/>
                <field name="is_sale_period_active" optional="hide" readonly="1"/>
                <field name="sale_period_info" optional="hide" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Product Product Form View - Show inherited sale dates -->
    <record id="product_product_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit.sale.dates</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="sale_start_date" optional="hide" readonly="1"/>
                <field name="sale_end_date" optional="hide" readonly="1"/>
                <field name="is_sale_period_active" optional="hide" readonly="1"/>
                <field name="sale_period_info" optional="hide" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Product Product Tree View -->
    <record id="product_product_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.product.tree.inherit.sale.dates</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="sale_start_date" optional="hide" readonly="1"/>
                <field name="sale_end_date" optional="hide" readonly="1"/>
                <field name="is_sale_period_active" optional="hide" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Search Views -->
    <record id="product_attribute_value_search_view_inherit" model="ir.ui.view">
        <field name="name">product.attribute.value.search.inherit.sale.dates</field>
        <field name="model">product.attribute.value</field>
        <field name="inherit_id" ref="product.product_attribute_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="sale_start_date"/>
                <field name="sale_end_date"/>
                <field name="is_sale_period_active"/>
            </xpath>
            <xpath expr="//filter[@name='inactive']" position="after">
                <separator/>
                <filter string="Sale Period Active" name="sale_period_active" domain="[('is_sale_period_active', '=', True)]"/>
                <filter string="Sale Period Expired" name="sale_period_expired" domain="[('is_sale_period_active', '=', False)]"/>
            </xpath>
        </field>
    </record>

    <record id="product_product_search_view_inherit" model="ir.ui.view">
        <field name="name">product.product.search.inherit.sale.dates</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="sale_start_date"/>
                <field name="sale_end_date"/>
                <field name="is_sale_period_active"/>
            </xpath>
            <xpath expr="//filter[@name='favorites']" position="after">
                <separator/>
                <filter string="Sale Period Active" name="sale_period_active" domain="[('is_sale_period_active', '=', True)]"/>
                <filter string="Sale Period Expired" name="sale_period_expired" domain="[('is_sale_period_active', '=', False)]"/>
            </xpath>
        </field>
    </record>
</odoo>
