<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Demo Event -->
        <record id="demo_event" model="event.event">
            <field name="name">Tech Conference 2024</field>
            <field name="date_begin" eval="(datetime.now() + timedelta(days=30)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="date_end" eval="(datetime.now() + timedelta(days=32)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="website_published">True</field>
        </record>

        <!-- Demo Event Ticket -->
        <record id="demo_event_ticket" model="event.event.ticket">
            <field name="name">VIP Ticket</field>
            <field name="event_id" ref="demo_event"/>
            <field name="price">100.00</field>
        </record>

        <!-- VIP Ticket Product Template -->
        <record id="demo_vip_ticket_template" model="product.template">
            <field name="name">VIP Ticket</field>
            <field name="type">service</field>
            <field name="sale_ok">True</field>
            <field name="website_published">True</field>
            <field name="list_price">100.00</field>
            <field name="service_tracking">event</field>
            <field name="event_id" ref="demo_event"/>
            <field name="event_ticket_id" ref="demo_event_ticket"/>
            <field name="description_sale">VIP access ticket with different release periods and discounts.</field>
        </record>

        <!-- Release Attribute -->
        <record id="demo_attribute_release" model="product.attribute">
            <field name="name">Release</field>
            <field name="create_variant">always</field>
        </record>

        <!-- Early Adopter Attribute Value -->
        <record id="demo_attribute_value_early_adopter" model="product.attribute.value">
            <field name="name">Early Adopter</field>
            <field name="attribute_id" ref="demo_attribute_release"/>
            <field name="default_extra_price">-20.00</field>
            <field name="sale_start_date" eval="(datetime.now() - timedelta(days=30)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="sale_end_date" eval="(datetime.now() + timedelta(days=30)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

        <!-- Standard Attribute Value -->
        <record id="demo_attribute_value_standard" model="product.attribute.value">
            <field name="name">Standard</field>
            <field name="attribute_id" ref="demo_attribute_release"/>
            <field name="default_extra_price">-10.00</field>
            <field name="sale_start_date" eval="(datetime.now() + timedelta(days=7)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="sale_end_date" eval="(datetime.now() + timedelta(days=60)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

        <!-- Attribute Line -->
        <record id="demo_release_attribute_line" model="product.template.attribute.line">
            <field name="product_tmpl_id" ref="demo_vip_ticket_template"/>
            <field name="attribute_id" ref="demo_attribute_release"/>
            <field name="value_ids" eval="[(4, ref('demo_attribute_value_early_adopter')), (4, ref('demo_attribute_value_standard'))]"/>
        </record>

        <!-- Additional demo: T-Shirt with Color and Size attributes -->
        <record id="demo_tshirt_template" model="product.template">
            <field name="name">Limited Edition T-Shirt</field>
            <field name="type">consu</field>
            <field name="sale_ok">True</field>
            <field name="website_published">True</field>
            <field name="list_price">25.00</field>
            <field name="description_sale">Limited edition t-shirt with seasonal availability.</field>
        </record>

        <!-- Color Attribute -->
        <record id="demo_attribute_color" model="product.attribute">
            <field name="name">Color</field>
            <field name="create_variant">always</field>
        </record>

        <!-- Size Attribute -->
        <record id="demo_attribute_size" model="product.attribute">
            <field name="name">Size</field>
            <field name="create_variant">always</field>
        </record>

        <!-- Color Values -->
        <record id="demo_color_red" model="product.attribute.value">
            <field name="name">Red</field>
            <field name="attribute_id" ref="demo_attribute_color"/>
            <field name="sale_start_date" eval="(datetime.now() - timedelta(days=15)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="sale_end_date" eval="(datetime.now() + timedelta(days=45)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

        <record id="demo_color_blue" model="product.attribute.value">
            <field name="name">Blue</field>
            <field name="attribute_id" ref="demo_attribute_color"/>
            <field name="sale_start_date" eval="(datetime.now() + timedelta(days=5)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="sale_end_date" eval="(datetime.now() + timedelta(days=90)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

        <!-- Size Values -->
        <record id="demo_size_small" model="product.attribute.value">
            <field name="name">Small</field>
            <field name="attribute_id" ref="demo_attribute_size"/>
        </record>

        <record id="demo_size_medium" model="product.attribute.value">
            <field name="name">Medium</field>
            <field name="attribute_id" ref="demo_attribute_size"/>
        </record>

        <record id="demo_size_large" model="product.attribute.value">
            <field name="name">Large</field>
            <field name="attribute_id" ref="demo_attribute_size"/>
        </record>

        <!-- T-Shirt Attribute Lines -->
        <record id="demo_tshirt_color_line" model="product.template.attribute.line">
            <field name="product_tmpl_id" ref="demo_tshirt_template"/>
            <field name="attribute_id" ref="demo_attribute_color"/>
            <field name="value_ids" eval="[(4, ref('demo_color_red')), (4, ref('demo_color_blue'))]"/>
        </record>

        <record id="demo_tshirt_size_line" model="product.template.attribute.line">
            <field name="product_tmpl_id" ref="demo_tshirt_template"/>
            <field name="attribute_id" ref="demo_attribute_size"/>
            <field name="value_ids" eval="[(4, ref('demo_size_small')), (4, ref('demo_size_medium')), (4, ref('demo_size_large'))]"/>
        </record>
    </data>
</odoo>
